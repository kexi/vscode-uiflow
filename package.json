{
  "name": "vscode-uiflow",
  "displayName": "VSCode UIFlow",
  "description": "UiFlow support For Visual Studio Code.",
  "author": "Kei Nakayama (https://github.com/kexi/)",
  "license": "MIT",
  "version": "2.1.2",
  "publisher": "kexi",
  "galleryBanner": {
    "color": "#79b74a",
    "theme": "dark"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.73.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kexi/vscode-uiflow.git"
  },
  "bugs": {
    "url": "https://github.com/kexi/vscode-uiflow/issues"
  },
  "categories": [
    "Programming Languages",
    "Other",
    "Snippets"
  ],
  "homepage": "https://github.com/kexi/vscode-uiflow#README.md",
  "activationEvents": [
    "onLanguage:uiflow",
    "onCommand:uiflow.openPreviewSideBySide",
    "onCommand:uiflow.openPreviewInPlace",
    "onCommand:uiflow.exportSVG",
    "onCommand:uiflow.exportDOT",
    "onCommand:uiflow.exportJSON",
    "onCommand:uiflow.openExport"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uiflow.openPreviewSideBySide",
        "title": "Open Preview to the Side",
        "category": "UiFlow",
        "icon": "media/preview-side-by-side.svg"
      },
      {
        "command": "uiflow.openPreviewInPlace",
        "title": "Open Preview",
        "category": "UiFlow",
        "icon": "media/preview-in-place.svg"
      },
      {
        "command": "uiflow.openSource",
        "title": "Open Source",
        "category": "UiFlow",
        "icon": "media/open-source.svg"
      },
      {
        "command": "uiflow.exportSVG",
        "title": "Export SVG",
        "category": "UiFlow"
      },
      {
        "command": "uiflow.openExport",
        "title": "Export PNG",
        "category": "UiFlow"
      },
      {
        "command": "uiflow.exportJSON",
        "title": "Export JSON",
        "category": "UiFlow"
      },
      {
        "command": "uiflow.exportDOT",
        "title": "Export DOT",
        "category": "UiFlow"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.openPreviewSideBySide",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.openPreviewInPlace",
          "group": "navigation"
        },
        {
          "when": "uiflowPreviewFocus",
          "command": "uiflow.openSource",
          "group": "navigation"
        },
        {
          "when": "resourceScheme == 'uiflow.preview'",
          "command": "uiflow.exportSVG",
          "group": "export@2"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.openExport",
          "group": "export@1"
        },
        {
          "when": "resourceLangId == 'uiflow'",
          "command": "uiflow.exportJSON",
          "group": "export@3"
        },
        {
          "when": "resourceLangId == 'uiflow'",
          "command": "uiflow.exportDOT",
          "group": "export@3"
        }
      ],
      "editor/context": [
        {
          "when": "uiflowPreviewFocus == uiflow",
          "command": "uiflow.openSource",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.exportSVG",
          "group": "export@2"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.openExport",
          "group": "export@1"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.exportJSON",
          "group": "export@3"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.exportDOT",
          "group": "export@3"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.openPreviewInPlace",
          "group": "navigation"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.exportSVG",
          "group": "export@1"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.openExport",
          "group": "export@2"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.exportJSON",
          "group": "export@3"
        },
        {
          "when": "resourceLangId == uiflow",
          "command": "uiflow.exportDOT",
          "group": "export@3"
        }
      ]
    },
    "snippets": [
      {
        "language": "uiflow",
        "path": "./snippets/uiflow.json"
      }
    ],
    "languages": [
      {
        "id": "uiflow",
        "extensions": [
          ".uif",
          ".uif.md",
          ".uif.text",
          ".uif.txt"
        ],
        "aliases": [
          "UiFlow"
        ]
      }
    ],
    "keybindings": [
      {
        "command": "uiflow.openPreviewSideBySide",
        "key": "alt+u p"
      },
      {
        "command": "uiflow.exportSVG",
        "key": "alt+u s"
      },
      {
        "command": "uiflow.openExport",
        "key": "alt+u n"
      },
      {
        "command": "uiflow.openExport",
        "key": "alt+u e"
      }
    ],
    "configuration": [
      {
        "title": "VsCode UiFlow configuration",
        "properties": {
          "uiflow.enableAutoPreview": {
            "type": "boolean",
            "default": false,
            "description": "Automatically open preview window."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "deploy": "vsce publish --yarn"
  },
  "devDependencies": {
    "@types/escape-html": "^1.0.2",
    "@types/glob": "^7.2.0",
    "@types/js-base64": "^3.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^14.18.20",
    "@types/parsimmon": "^1.10.6",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@vscode/test-electron": "^2.0.3",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.16.0",
    "glob": "^7.2.3",
    "jquery": "^3.6.0",
    "mocha": "^9.1.3",
    "ts-loader": "^9.3.0",
    "typescript": "^4.7.2",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.1"
  },
  "dependencies": {
    "@bendera/vscode-webview-elements": "^0.7.0",
    "js-base64": "^3.7.2",
    "parsimmon": "^1.18.1",
    "through2": "^4.0.2",
    "uiflow": "git+https://github.com/kexi/uiflow.git#vscode-uiflow-0.6.2"
  }
}
